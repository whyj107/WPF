<Window x:Class="ProjectMay.checkpassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectMay"
        mc:Ignorable="d"
        Title="checkpassword" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="비밀번호:"/>
                <TextBox Name="password_TB" Width="200"/>
            </StackPanel>
            <Grid>
                <Button Name="ok_B" Content="확인" Click="Button_Click" HorizontalAlignment="Right"/>
                <Button Name="cancle_B" Content="취소" Click="Button_Click" HorizontalAlignment="Left"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
