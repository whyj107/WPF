<Window x:Class="DigitalPalette.Views.FollowMouseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalPalette.ViewModels"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
        xmlns:VM="clr-namespace:DigitalPalette.ViewModels"
        mc:Ignorable="d"
        Closed="Window_Closed"
        Title="FollowMouseWindow"  Height="150" Width="200" Topmost="True"
        WindowStyle="None" ResizeMode="NoResize" Background="Lavender">

    <Window.DataContext>
        <VM:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Height="50" Width="50" Background="{Binding nowColor.solidColorbrush}" CornerRadius="50">
            <Image Stretch="Fill"/>
        </Border>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="{Binding nowColor.r}"/>
            <Label Content="{Binding nowColor.g}"/>
            <Label Content="{Binding nowColor.b}"/>
            <Label Content="{Binding nowColor.hex}"/>
        </StackPanel>

    </Grid>
</Window>
